package ejerciciosTema4;

import java.util.Scanner;

public class Ejercicio11 {

	public static void main(String[] args) {
		Scanner teclado=new Scanner (System.in);
		
		String frase;
		boolean caracteres=false;
		int pos,n=0;
		int disLetras=0;
		
		do {
			System.out.println("Dime una frase (maximo 60 caracteres)");
			frase=teclado.nextLine();
			frase=frase.toUpperCase();
			if (frase.length()<60) {
				caracteres=true;
			}//if_do-while
		}//do-while
		while (caracteres==false);
		
		for (int i='A'; i<='Z'; i++) {
			pos=frase.indexOf((char)i);
			
			if (pos==-1) {
				System.out.println("La letra "+(char)i+" no se ha encontrado.");
			}//if
			else {
				disLetras++;
				n=0;
				pos++;
				while (frase.indexOf((char)i)!=-1) {
					n++;
					pos++;
				}//while
				System.out.println("La letra "+(char)i+" se ha encontrado "+n+" veces.");
			}//else
		}//for
		System.out.println("La frase contiene "+disLetras+" letras distintas.");
	}//main

}//class
