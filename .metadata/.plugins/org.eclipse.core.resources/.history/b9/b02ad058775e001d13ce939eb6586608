package ejerciciosTema4;

import java.util.Scanner;

public class ejercicio2 {

	public static void main(String[] args) {
		Scanner teclado=new Scanner (System.in);
		String frase;
		int j=0,k=0;
		String aux="";
		
		System.out.println("Dime una frase (maximo 80 caracteres): ");
		frase=teclado.nextLine();
		frase=aux.toUpperCase();
		
		if (frase.length()> 80) {
			System.out.println("Dime una frase (maximo 80 caracteres): ");
			frase=teclado.nextLine();
		}//if
		else if(frase.length()<= 80) {
			for (int i=0; i<frase.length(); i++) {
				if (frase.charAt(i)==aux.charAt(i)) {
					j++;
				}//if_for
				else {
					k++;
				}//else_for
				
			}//for_if
			
		}//if2
		System.out.println("En esta frase hay "+j+" mayusculas y "+k+" minusculas en "+frase.length()+" caracteres");
		System.out.println(frase);
		System.out.println(aux);
	}//main

}//class
