package ejerciciosTema4;

import java.util.Scanner;

public class Ejercicio2_5 {

	public static void main(String[] args) {
		Scanner teclado=new Scanner (System.in);
		
		String palabra;
		String auxi, auxf;
		char letrai, letraf;
		
		System.out.println("Dime una palabra");
		palabra=teclado.nextLine();
		
		letrai=palabra.charAt(0);
		letraf=palabra.charAt(palabra.length());
		
		auxi=String.valueOf(letrai);
		auxf=String.valueOf(letraf);
		
		palabra=palabra.replace(auxi,auxf);
		palabra=palabra.replace(auxf,auxi);
		
		System.out.println(palabra.replace(letrai, letraf));

	}//main

}//class
