package ejerciciosTema4;

import java.util.Scanner;

public class Ejercicio10 {

	public static void main(String[] args) {
		Scanner teclado=new Scanner (System.in);
		
		String codigo;
		String año,curso;
		String sexo,ran;
		boolean nulo=false;
		
		System.out.println("Dime un codigo");
		codigo=teclado.nextLine();teclado.nextLine();
		
		while (codigo.length()<8 || codigo.length()>8) {
			System.out.println("Dime un codigo valido");
			codigo=teclado.nextLine();teclado.nextLine();
		}//while
		while (nulo==false) {
			año=codigo.substring(0,3);
			sexo=codigo.substring(4);
			curso=codigo.substring(5);
			ran=codigo.substring(6,7);
			System.out.println(año);
			System.out.println(sexo);
			System.out.println(curso);
			System.out.println(ran);
		}//while
		
	}//main

}//class
